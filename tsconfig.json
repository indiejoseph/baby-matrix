{
  "compilerOptions": {
    "declaration": false,
    "noEmit": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2019",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020",
      "ES2020.Symbol.WellKnown",
      "ES2020.String"
    ],
    "pretty": true,
    "sourceMap": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "types",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}